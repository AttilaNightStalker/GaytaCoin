.button-box{
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  color: ivory;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  background-color:lightskyblue;
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}

.button-hover{
  color:azure;
  background-color:lightskyblue;
  top:7rpx;
}

