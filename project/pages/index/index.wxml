<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <image wx:if="{{userInfo.gender}}" src="../../images/male.png" class="userinfo-gender"></image>
      <image wx:else src="../../images/female.png" class="userinfo-gender"></image>
    </block>
  </view>
  <view class="index-menu">
		<view class="index-menu-item" wx:for="{{indexmenu}}" wx:key="{{item.id}}">
			<image id='{{item.id}}' bindtap='nav_changeImg' src="{{item.icon}}"></image>
			<text>{{item.text}}</text>
		</view>
	</view>
</view>
